<h2> Articles </h2>
<%= link_to 'New article', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), :class => "btn btn-primary btn-sm" %> </td>
      <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-primary btn-sm" %> </td>
      <td><%= button_to 'Delete', article_path(article), :class => "btn btn-primary btn-sm",
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

